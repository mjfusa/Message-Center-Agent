{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Title:",
          "value": "${title}"
        },
        {
          "title": "Category:",
          "value": "${category}"
        },
        {
          "title": "Severity:",
          "value": "${severity}"
        },
        {
          "title": "Start Date:",
          "value": "${startDateTime}"
        },
        {
          "title": "End Date:",
          "value": "${endDateTime}"
        },
        {
          "title": "Action Required By:",
          "value": "${if(actionRequiredByDateTime,  actionRequiredByDateTime, 'No action required')}"
        },
        {
          "title": "Last Modified:",
          "value": "${lastModifiedDateTime}"
        },
        {
          "title": "Major Change:",
          "value": "${if(isMajorChange, 'Yes', 'No')}"
        },
        {
          "title": "Has Attachments:",
          "value": "${if(hasAttachments, 'Yes', 'No')}"
        },
        {
          "title": "Tags:",
          "value": "${if(tags[0],  tags[0],'')}${if(tags[1], ', ' + tags[1], '')}${if(tags[2], ', ' + tags[2], '')}${if(tags[3], ', ' + tags[3], '')}"
        },
        {
          "title": "Roadmap IDs:",
          "value": "${details[0].value}"
        },
        {
          "title": "Platforms:",
          "value": "${details[2].value}"
        },
        {
          "title": "Services:",
          "value": "${if(services[0],  services[0],'')}${if(services[1], ', ' + services[1], '')}${if(services[2], ', ' + services[2], '')}${if(services[3], ', ' + services[3], '')}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Roadmap Details",
      "url": "${if(details[0].value, 'https://www.microsoft.com/en-us/microsoft-365/roadmap?searchterms=' + details[0].value, '')}",
      "isEnabled": true
    }
  ]
}
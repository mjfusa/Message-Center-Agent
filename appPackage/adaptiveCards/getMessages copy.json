{
    "type": "AdaptiveCard",
    "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Id: ${id}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.title: ${if(title, title, 'N/A')}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.body: ${if(body, body, 'N/A')}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.category: ${if(category, category, 'N/A')}",
                    "wrap": true
                },
                {
                    "type": "TextBlock",
                    "text": "value.severity: ${if(severity, severity, 'N/A')}",
                    "wrap": true
                }
            ]
        }
    ]
}

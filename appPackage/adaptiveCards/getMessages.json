{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Title:",
          "value": "${title}"
        },
        {
          "title": "Category:",
          "value": "${category}"
        },
        {
          "title": "Severity:",
          "value": "${severity}"
        },
        {
          "title": "Start Date:",
          "value": "${startDateTime}"
        },
        {
          "title": "End Date:",
          "value": "${endDateTime}"
        },
        {
          "title": "Action Required By:",
          "value": "${if(actionRequiredByDateTime,  actionRequiredByDateTime, 'No action required')}"
        },
        {
          "title": "Last Modified:",
          "value": "${lastModifiedDateTime}"
        },
        {
          "title": "Major Change:",
          "value": "${if(isMajorChange, 'Yes', 'No')}"
        },
        {
          "title": "Has Attachments:",
          "value": "${if(hasAttachments, 'Yes', 'No')}"
        },
        {
          "title": "Roadmap IDs:",
          "value": "${if(details[0].name=='RoadmapIds',  details[0].value,'')}"
        },
        {
          "title": "Platforms:",
          "value": "${if(details[2].name=='Platforms',  details[2].value,'')}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Roadmap Details",
      "url": "${if(details[0].name=='RoadmapIds', 'https://www.microsoft.com/en-us/microsoft-365/roadmap?searchterms=' + details[0].value, '')}",
      "isEnabled": true
    }
  ]
}
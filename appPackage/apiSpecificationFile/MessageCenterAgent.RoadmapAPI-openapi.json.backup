  "paths": {
    "/m365": {
      "get": {
        "operationId": "getRoadmapItems",
        "description": "Retrieve roadmap items with optional filtering, sorting, and pagination. Always use 'created' field for date operations, not 'createdDateTime'.",
        "parameters": [
          {
            "name": "$filter",
            "in": "query",
            "required": false,
            "description": "OData filter expression. IMPORTANT: Use 'created' field for date filtering (not 'createdDateTime'). Supports contains(), tolower(), and date comparisons.",
            "schema": {
              "type": "string"
            },
            "explode": false
          },
          {
            "name": "$orderby",
            "in": "query",
            "required": false,
            "description": "OData order by expression. Use 'created' field for date sorting.",
            "schema": {
              "type": "string"
            },
            "explode": false
          },
          {
            "name": "$top",
            "in": "query",
            "required": false,
            "description": "Number of items to return (1-100)",
            "schema": {
              "type": "integer",
              "format": "int32"
            },
            "explode": false
          },
          {
            "name": "$skip",
            "in": "query",
            "required": false,
            "description": "Number of items to skip for pagination",
            "schema": {
              "type": "integer",
              "format": "int32"
            },
            "explode": false
          },
          {
            "name": "$count",
            "in": "query",
            "required": false,
            "description": "Include count of total items",
            "schema": {
              "type": "boolean"
            },
            "explode": false
          }
        ],
        "responses": {
          "200": {
            "description": "The request has succeeded.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RoadmapResponse"
                }
              }
            }
          },
          "400": {
            "description": "The server could not understand the request due to invalid syntax.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "string"
                        },
                        "message": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "code",
                        "message"
                      ],
                      "description": "Bad request - invalid query parameters"
                    }
                  },
                  "required": [
                    "error"
                  ]
